{
  "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "rootDir": "./src/",
      "outDir": "./sand/",
      "strict": true,
      "declaration": true,
      //"declarationDir": "./typings",
      "composite": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "typeRoots": [
          "node_modules/@types",
          "main.d.ts"
      ],
      "sourceMap": false,
      "baseUrl": "./",
      "paths": {
          "main": ["src/main", "sand/main"],
          "@types": ["main"]
      }
  },
  "ts-node": {
      "require": ["tsconfig-paths/register"]
  },
  "files": [
      "src/main.ts"
  ],
  "include": [
      "./**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "sand"
  ]
}