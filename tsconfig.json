{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "rootDir": "./src/",
        "outDir": "./core/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types",
            "main.d.ts"
        ],
        "sourceMap": false,
        "baseUrl": "./",
        "paths": {
            "main": ["src/main", "core/main"],
            "@types": ["main"]
        }
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "files": [
        "src/main.ts"
    ],
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "core"
    ]
}